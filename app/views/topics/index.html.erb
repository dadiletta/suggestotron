
<div class="container">
    <div class="jumbotron" style="background-image:url('<%=asset_path('ruby-on-rails.jpg') %>'); background-size:cover;">        
    <h1>RailsBridge!</h1>
    </div>
</div>
<%if notice%>
    <div id="notice" class="alert alert-success"><%= notice %></div>
<%end%>
<table class="table table-striped">

  <% @topics.each do |topic| %>
  <tr>
    <td><%= link_to topic.title, topic %></td>
    <td><%= pluralize(topic.votes.count, "vote") %></td>
    <td><%= button_to '+1', upvote_topic_path(topic), method: :post %>
    <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'New Topic', new_topic_path, class: "btn btn-success" %>
